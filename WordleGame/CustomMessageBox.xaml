        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WordleGame"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="150" Width="300" >
   <Grid Background="#222222">
       <TextBlock Name="TextBlock"  Text="This is a custom message box." TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="20" Foreground="White" TextWrapping="WrapWithOverflow"/> 
   </Grid>
        
</Window>
